<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.sk.and.cz.radia"
       name="SK a CZ Rádia"
       version="1.0.6"
       provider-name="mebox a ma_sk/majko96/">
  <requires>
    <import addon="xbmc.python" version="2.14.0" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Listen to the radio of your choice</summary>
    <summary lang="cz">Poslouchej rádia podle vlastního výběru</summary>
	<summary lang="sk">Počúvaj rádia podľa vlastného výberu</summary>
    <description lang="en">Addon allows you to listen Slovak and Czech radio stations.</description>
    <description lang="cz">Doplnok umožňuje poslouchat Slovenské a České rozhlasové stanice.</description>
	<description lang="sk">Doplnok umožňuje počúvať Slovenské a České rozhlasové stanice.</description>
    <platform>all</platform>
  </extension>
</addon>